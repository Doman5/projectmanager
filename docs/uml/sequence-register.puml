@startuml
' Sequence diagram: register flow

actor User as user
participant "AuthController" as AC
participant "AuthService" as AS
participant "UserRepository" as UR
participant "PasswordEncoder" as PE

user -> AC: POST /api/auth/register (RegisterDto)
AC -> AS: register(RegisterDto)
AS -> UR: existsByEmail(email)
UR --> AS: false
AS -> PE: encode(password)
PE --> AS: encoded
AS -> UR: save(User)
UR --> AS: User
AS --> AC: void
AC --> user: 201 Created

@enduml
